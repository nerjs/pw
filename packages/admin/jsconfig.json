{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@data/*": ["src/data/*"],
      "@comp/*": ["src/components/*"],
      "@styled/*": ["src/styled/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "exclude": ["build"],
  "include": ["node_modules"]
}